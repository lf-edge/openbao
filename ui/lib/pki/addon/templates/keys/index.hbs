<SecretListHeader
  @model={{this.model.parentModel}}
  @backendCrumb={{hash
    label=this.model.parentModel.id
    text=this.model.parentModel.id
    path="vault.cluster.secrets.backend.list-root"
    model=this.model.parentModel.id
  }}
  @isEngine={{true}}
/>
{{#if (or this.model.hasConfig this.model.keyModels)}}
  <Page::PkiKeyList
    @keyModels={{this.model.keyModels}}
    @mountPoint={{this.mountPoint}}
    @canImportKey={{get this.model.keyModels "0.canImportKey"}}
    @canGenerateKey={{get this.model.keyModels "0.canGenerateKey"}}
    @canRead={{get this.model.keyModels "0.canRead"}}
    @canEdit={{get this.model.keyModels "0.canEdit"}}
  />
{{else}}
  <Toolbar />
  <EmptyState @title="PKI not configured" @message={{this.notConfiguredMessage}}>
    <LinkTo @route="configuration.create">
      Configure PKI
    </LinkTo>
  </EmptyState>
{{/if}}