<section class="section">
  <div class="container is-widescreen">
    <ReplicationPage @model={{this.model}} as |Page|>
      <Page.header @showTabs={{true}} />
      {{#if Page.isDisabled}}
        <EmptyState
          @title="Disaster Recovery secondary not set up"
          @message={{Page.message}}
          @icon="alert-circle"
          @bottomBorder={{true}}
        >
          <nav class="breadcrumb">
            <ul class="is-grouped-split">
              <li>
                <LinkTo @route="vault.cluster.secrets.backends">
                  <span class="sep"></span>
                  Go back
                </LinkTo>
              </li>
              {{! TODO Add a link to a tutorial for 'disaster-recovery' }}
            </ul>
          </nav>
        </EmptyState>
      {{else}}
        <section>
          <ReplicationActions @replicationMode="dr" @model={{this.model}} @onPromote={{action "onPromote"}} />
        </section>
      {{/if}}
    </ReplicationPage>
  </div>
</section>